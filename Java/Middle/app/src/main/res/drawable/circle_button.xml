<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="oval"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#6da7d9" />
            <gradient android:angle="-90" android:startColor="#2e5076" android:endColor="#687e9a"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="oval"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#6da7d9" />
            <solid android:color="#687e9a"/>
        </shape>
    </item>
    <item >
        <shape android:shape="oval"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#6da7d9" />
            <gradient android:angle="-90" android:startColor="#687e9a" android:endColor="#2e5076" />
        </shape>
    </item>
</selector>